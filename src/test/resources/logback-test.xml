<configuration debug="false">
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>pretty_print_debug.log</file>
        <append>false</append>
        <encoder>
            <pattern>%-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="FILE"/>
    </root>
</configuration>